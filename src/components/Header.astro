---
import Navigation from '../components/Navigation.astro'
import { SkipLinks } from 'accessible-astro-components'
---
<header>
  <SkipLinks />
  <Navigation>
  </Navigation>
</header>

<style lang="scss" is:global>
  @use '../assets/scss/base/outline' as *;

  header {
    .type-icon a {
      display: block;

      [astro-icon] {
        margin-top: -4px;
        width: 15px;

        path {
          fill: var(--action-color);
          transition: fill 0.2s ease-in-out;
        }
      }

      &:hover {
        [astro-icon] path {
          fill: var(--action-color-state);
        }
      }
    }
  }

  // Añade estilos para dispositivos móviles
  @media (max-width: 768px) {
    header {
      // Aquí puedes agregar los estilos específicos que deseas para móvil. 
      // Por ejemplo, puedes ajustar el padding, margin, etc.
      padding: 0 20px;

      .type-icon a {
        [astro-icon] {
          width: 12px; // Puedes adaptar el tamaño del icono, si es necesario.
          // Añade o modifica otros estilos aquí según tus necesidades.
        }
      }
    }
  }
</style>
